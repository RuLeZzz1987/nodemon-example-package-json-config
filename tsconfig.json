{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["es2017"],
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}